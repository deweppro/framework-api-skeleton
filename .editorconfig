# Editor configuration, see http://editorconfig.org
root = true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space
indent_size=4

[{Makefile.*,makefile,Makefile,GNUmakefile,*.mk}]
indent_style=tab
tab_width=4

[*.less]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[*.html]
indent_style=space
indent_size=1

[*.neon]
indent_style=tab
indent_size=4

[{*.ats,*.ts}]
indent_style=space
indent_size=2

[{.analysis_options,*.yml,*.yaml,*.lock,*.json}]
indent_style=space
indent_size=4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
